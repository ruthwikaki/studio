
# Firebase Project Configuration (Client-side - for Firebase JS SDK)
NEXT_PUBLIC_FIREBASE_API_KEY=YOUR_WEB_API_KEY
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=YOUR_PROJECT_ID.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=YOUR_PROJECT_ID
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=YOUR_PROJECT_ID.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=YOUR_MESSAGING_SENDER_ID
NEXT_PUBLIC_FIREBASE_APP_ID=YOUR_WEB_APP_ID
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://YOUR_PROJECT_ID-default-rtdb.firebaseio.com

# Firebase Admin SDK Configuration (Server-side)
# These values come from your Firebase project's service account key JSON file.
# For local development, copy these to a .env.local file (which should be in .gitignore).
# NEVER COMMIT YOUR ACTUAL PRIVATE KEY TO A PUBLIC REPOSITORY.
FIREBASE_PROJECT_ID="YOUR_PROJECT_ID"
FIREBASE_CLIENT_EMAIL="your-service-account-email@YOUR_PROJECT_ID.iam.gserviceaccount.com"
# For FIREBASE_PRIVATE_KEY, ensure the newlines are correctly represented.
# For example, in a .env file, you might need to enclose the multi-line key in double quotes
# or handle it as specified by your deployment environment.
# Example:
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_VERY_LONG_PRIVATE_KEY_CONTENT_WITH_NEWLINES\n-----END PRIVATE KEY-----\n"
# Alternatively, some systems prefer Base64 encoding the key then decoding it in your admin.ts,
# but the direct string with \n is common for .env files.
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nPASTE_YOUR_PRIVATE_KEY_CONTENT_HERE_PRESERVING_NEWLINES\n-----END PRIVATE KEY-----\n"


# Genkit Environment (Optional, if you use Genkit specific env vars)
# GENKIT_ENV=dev
# GENKIT_API_KEY=YOUR_GENKIT_API_KEY_IF_NEEDED

# Application settings
PORT=9003
